<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:outlineAmbientShadowColor="@color/black">
    <TextView
        android:id="@+id/text_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Чебоксары"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttom_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">
    </TextView>
    <Button
        android:id="@+id/buttom_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@+id/text_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="символ"
        tools:ignore="MissingConstraints">
    </Button>
    <TextView
        android:id="@+id/text_current_date"
        app:layout_constraintTop_toBottomOf="@+id/text_city"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="дата обновления данных"
        android:textSize="15sp">
    </TextView>
    <TextView
        android:id="@+id/text_date_of_update"
        app:layout_constraintTop_toBottomOf="@+id/text_current_date"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="текущая дата"
        android:textSize="20sp"
        android:layout_marginBottom="15dp">
    </TextView>
    <Button
        android:id="@+id/buttom_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_date_of_update"
        app:layout_constraintEnd_toStartOf="@+id/buttom_week"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="день"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/buttom_week"
        app:layout_constraintStart_toEndOf="@+id/buttom_day"
        app:layout_constraintTop_toTopOf="@+id/buttom_day"
        app:layout_constraintEnd_toStartOf="@+id/buttom_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="неделя"
        android:background="@color/black"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/buttom_month"
        app:layout_constraintStart_toEndOf="@+id/buttom_week"
        app:layout_constraintTop_toTopOf="@+id/buttom_day"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="месяц"
        tools:ignore="MissingConstraints">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>